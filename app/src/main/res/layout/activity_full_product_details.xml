<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative_layout"
    android:background="@drawable/background_for_products"
    tools:context=".FullProductDetails">

    <TextView
        android:id="@+id/p_id_gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/linear_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_for_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardCornerRadius="9dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/image_for_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_below="@+id/cardview_for_image"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="-35dp">
    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Product Name Here"
        android:textColor="@color/black"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview1"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Product Price Here"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview3"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview2"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Product Price Here"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview4"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview3"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Product Price Here"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview5"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview4"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview6"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_below="@+id/cardview5"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview7"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview6"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview8"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview7"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview9"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview8"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview10"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview9"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview11"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview10"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview12"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardview11"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/textview12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textAlignment="center"
            android:fontFamily="@font/muli_regular" />
    </androidx.cardview.widget.CardView>

    </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="2"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/chat"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:backgroundTint="@color/teal_200"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buy"
            android:backgroundTint="@color/teal_200"
            android:layout_margin="8dp"/>

    </LinearLayout>


</RelativeLayout>
